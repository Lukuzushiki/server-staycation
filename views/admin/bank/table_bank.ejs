<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#addModal"
    >
      <i class="fas fa-plus"></i>
      Add Bank
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>No.Rekening</th>
            <th>Nama Bank</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < bank.length; i++){ %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= bank[i].name %></td>
            <td><%= bank[i].nomorRekening %></td>
            <td><%= bank[i].nameBank %></td>
            <td>
              <img
                src="http://new-project-admin-staycation.herokuapp.com/<%= bank[i].imageUrl %>"
                alt="imageUrl"
                height="70px"
              />
            </td>
            <td>
              <form
                action="/admin/bank/<%= bank[i]._id  %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-warning btn-sm button-update"
                  data-id="<%= bank[i]._id %>"
                  data-name="<%= bank[i].name %>"
                  data-namebank="<%= bank[i].nameBank %>"
                  data-nomorrekening="<%= bank[i].nomorRekening %>"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
