<div
  class="tab-pane fade"
  id="add-item"
  role="tabpanel"
  aria-labelledby="nav-profile-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form action="/admin/item" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="tile">Title</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="title"
            placeholder="Enter Title"
          />
        </div>
        <div class="form-group">
          <label for="tile">Price</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="price"
            placeholder="Enter Price"
          />
        </div>
        <div class="form-group">
          <label for="tile">City</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="city"
            placeholder="Enter City"
          />
        </div>
        <div class="form-group">
          <label for="tile">Category</label>
          <select name="categoryId" class="form-control">
            <option value="">---Category---</option>
            <% for(let i = 0; i < category.length; i++) { %>
            <option value="<%= category[i].id %>"
              ><%= category[i].name %></option
            >
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="tile">Image</label>
          <input
            type="file"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="image"
            multiple
            required
          />
        </div>
        <div class="form-group">
          <label for="tile">Description</label>
          <textarea type="text" class="form-control" name="about"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
